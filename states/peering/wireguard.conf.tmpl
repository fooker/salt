[Interface]
PrivateKey = {{ pillar.peering.peers[grains.id].wireguard.privkey }}
{% if 'local' in pillar.peering.transfers[grains.id][peer].wireguard.port %}
ListenPort = {{ pillar.peering.transfers[grains.id][peer].wireguard.port.local }}
{% endif %}

[Peer]
